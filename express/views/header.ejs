            </div>

        </div>


        <div class="icon">
            <span class="fa fa-wifi"></span>
            <span class="icon-show red fa fa-remove" style="font-size: 13px;border-radius: 50%" id="connection"></span>
            <!-- connection mesage-->
            <div class="user-toggle animated" id="connection_" style="display: block">
                   <h4>Connection is Lost</h4>
                   <img src="../icons/conn.png" alt="" srcset="" width="20%">
                   <p>Verify proxy</p>
            </div>
            <div class="user-toggle animated" id="connection_okay" style="display: block">
                    <h4>You are connected</h4>
             </div>
        </div>

        <!-- search option-->
        <div class="icon">
            <span class="fa fa-search" onclick="showInfo('search')"></span>
            <!-- search bar-->
            <div class="user-toggle" id="search">
                   <form action="" method="post" class="form-search" id="form">
                       <input type="search" name="search" id="searchData" placeholder="Search In Boopy">
                       <button type="submit"><span class="fa fa-search"></span></button>
                   </form>
                   <div class="result" id="result">
                       <div style="max-height: 200px;overflow-y:scroll" id="place">   
                       </div>
                   </div>
             </div>
        </div>

        <div class="icon ">
            <span class="fa fa-envelope-open-o"></span>
