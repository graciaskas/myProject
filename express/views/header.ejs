	<div class="brand">
		<h1 class="text-center mb-4"><%=title%></h1>
    </div>
    <div class="icons">
        <div class="icon user-info">
            <span class="fa fa-user " id="ft-18" onclick="showInfo('user')"></span>
            <!-- user option-->
            <div class="user-toggle" id="user">
                <div class="head-data">
                    <h4>Kas Gracias Tmb</h4>
                </div>
                <div class="body">
                    <div class="li">
                        <p onclick="hideElement('loadingBrand')">Load Data</p>
                    </div>
